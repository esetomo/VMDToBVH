<Window x:Class="VMDToBVH.Views.ErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="エラー" Height="400" Width="616.2">
    <DockPanel>
        <Button DockPanel.Dock="Bottom" HorizontalAlignment="Right" Margin="8" Padding="4">OK</Button>
        <TextBox Margin="8" Text="{Binding Message}" IsReadOnly="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
    </DockPanel>
</Window>
